{
  "openapi": "3.0.1",
  "info": {
    "title": "Empathy Technical Test API",
    "version": "v1"
  },
  "paths": {
    "/Survey": {
      "get": {
        "tags": [
          "Survey"
        ],
        "summary": "Get All Surveys",
        "description": "Get all surveys. This is if you want to get all your surveys that have been created. Use this for creating a table of surveys. <br/> <br /> To use this you must provide an x-api-key header key (which is your email address). You will only receive surveys that were created with that email address",
        "responses": {
          "200": {
            "description": "Success",
            "content": {
              "text/plain": {
                "schema": {
                  "type": "array",
                  "items": {
                    "$ref": "#/components/schemas/SurveyDto"
                  }
                }
              },
              "application/json": {
                "schema": {
                  "type": "array",
                  "items": {
                    "$ref": "#/components/schemas/SurveyDto"
                  }
                }
              },
              "text/json": {
                "schema": {
                  "type": "array",
                  "items": {
                    "$ref": "#/components/schemas/SurveyDto"
                  }
                }
              }
            }
          }
        }
      },
      "post": {
        "tags": [
          "Survey"
        ],
        "summary": "Create a Survey",
        "description": "Create a survey record. You should use this API when creating the initial survey object and to get back the Id. Use this the very first time you are opening a survey page. Once you have an ID you should be using the PUT method to save the survey and update the content of it. <br/> <br /> To use this you must provide an x-api-key header key (which is your email address). You will only receive surveys that were created with that email address",
        "requestBody": {
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/SurveyDto"
              }
            },
            "text/json": {
              "schema": {
                "$ref": "#/components/schemas/SurveyDto"
              }
            },
            "application/*+json": {
              "schema": {
                "$ref": "#/components/schemas/SurveyDto"
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "Success",
            "content": {
              "text/plain": {
                "schema": {
                  "type": "array",
                  "items": {
                    "$ref": "#/components/schemas/SurveyDto"
                  }
                }
              },
              "application/json": {
                "schema": {
                  "type": "array",
                  "items": {
                    "$ref": "#/components/schemas/SurveyDto"
                  }
                }
              },
              "text/json": {
                "schema": {
                  "type": "array",
                  "items": {
                    "$ref": "#/components/schemas/SurveyDto"
                  }
                }
              }
            }
          }
        }
      }
    },
    "/Survey/{surveyId}": {
      "get": {
        "tags": [
          "Survey"
        ],
        "summary": "Get Single Survey",
        "description": "Get a specific survey object. This is if you want to open an already created survey to show the content of the survey. <br/> <br /> To use this you must hprovide an x-api-key header key (which is your email address). You will only receive surveys that were created with that email address",
        "parameters": [
          {
            "name": "surveyId",
            "in": "path",
            "required": true,
            "schema": {
              "type": "string"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "Success",
            "content": {
              "text/plain": {
                "schema": {
                  "$ref": "#/components/schemas/SurveyDto"
                }
              },
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/SurveyDto"
                }
              },
              "text/json": {
                "schema": {
                  "$ref": "#/components/schemas/SurveyDto"
                }
              }
            }
          }
        }
      },
      "put": {
        "tags": [
          "Survey"
        ],
        "summary": "Update a Survey",
        "description": "Update a survey record. You should be using this API whenever you are modifying the content of an existing survey. <br/> <br /> To use this you must provide an x-api-key header key (which is your email address). You will only receive surveys that were created with that email address",
        "parameters": [
          {
            "name": "surveyId",
            "in": "path",
            "required": true,
            "schema": {
              "type": "string"
            }
          }
        ],
        "requestBody": {
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/SurveyDto"
              }
            },
            "text/json": {
              "schema": {
                "$ref": "#/components/schemas/SurveyDto"
              }
            },
            "application/*+json": {
              "schema": {
                "$ref": "#/components/schemas/SurveyDto"
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "Success",
            "content": {
              "text/plain": {
                "schema": {
                  "type": "array",
                  "items": {
                    "$ref": "#/components/schemas/SurveyDto"
                  }
                }
              },
              "application/json": {
                "schema": {
                  "type": "array",
                  "items": {
                    "$ref": "#/components/schemas/SurveyDto"
                  }
                }
              },
              "text/json": {
                "schema": {
                  "type": "array",
                  "items": {
                    "$ref": "#/components/schemas/SurveyDto"
                  }
                }
              }
            }
          }
        }
      }
    }
  },
  "components": {
    "schemas": {
      "Question": {
        "type": "object",
        "properties": {
          "questionId": {
            "type": "integer",
            "format": "int32"
          },
          "questionText": {
            "type": "string",
            "nullable": true
          },
          "mandatoryInd": {
            "type": "boolean"
          },
          "questionType": {
            "type": "integer",
            "format": "int32"
          },
          "options": {
            "type": "array",
            "items": {
              "type": "string"
            },
            "nullable": true
          },
          "randomizeOptionsInd": {
            "type": "boolean"
          },
          "cards": {
            "type": "array",
            "items": {
              "type": "string"
            },
            "nullable": true
          },
          "programmerNotes": {
            "type": "string",
            "nullable": true
          },
          "instructions": {
            "type": "string",
            "nullable": true
          }
        },
        "additionalProperties": false
      },
      "SurveyDto": {
        "type": "object",
        "properties": {
          "id": {
            "type": "string",
            "nullable": true
          },
          "title": {
            "type": "string",
            "nullable": true
          },
          "description": {
            "type": "string",
            "nullable": true
          },
          "questions": {
            "type": "array",
            "items": {
              "$ref": "#/components/schemas/Question"
            },
            "nullable": true
          }
        },
        "additionalProperties": false
      }
    },
    "securitySchemes": {
      "ApiKey": {
        "type": "apiKey",
        "description": "Authorization by x-api-key inside request's header",
        "name": "x-api-key",
        "in": "header"
      }
    }
  },
  "security": [
    {
      "ApiKey": [ ]
    }
  ]
}